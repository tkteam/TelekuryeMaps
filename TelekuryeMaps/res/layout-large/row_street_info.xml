<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="100" >

    <TextView
        android:id="@+id/tv_building_number"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:gravity="center"
        android:padding="5dp"
        android:text="77 A"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:background="#000000" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="84.5"
        android:orientation="vertical"
        android:padding="1dp"
        android:weightSum="100" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:background="#EDEDED"
            android:padding="2dp"
            android:weightSum="100" >

            <TextView
                android:id="@+id/tv_building_name1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:padding="2dp"
                android:paddingLeft="15dp"
                android:text="Bina Adı  :"
                android:textColor="#000000"
                android:textSize="@dimen/streetinfo"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_building_name_value"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="75"
                android:padding="2dp"
                android:paddingLeft="15dp"
                android:text="Yok"
                android:textColor="#000000"
                android:textSize="@dimen/streetinfo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:orientation="horizontal"
            android:padding="2dp"
            android:weightSum="100" >

            <TextView
                android:id="@+id/tv_person_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:padding="2dp"
                android:paddingLeft="15dp"
                android:text="Kişiler     :"
                android:textColor="#000000"
                android:textSize="@dimen/streetinfo"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_person_name_value"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="75"
                android:padding="2dp"
                android:paddingLeft="15dp"
                android:text="Yok"
                android:textColor="#000000"
                android:textSize="@dimen/streetinfo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:background="#EDEDED"
            android:orientation="horizontal"
            android:padding="2dp"
            android:weightSum="100" >

            <TextView
                android:id="@+id/tv_info_building_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:padding="2dp"
                android:paddingLeft="15dp"
                android:text="Bina Tipi :"
                android:textColor="#000000"
                android:textSize="@dimen/streetinfo"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_info_building_type_value"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="75"
                android:padding="2dp"
                android:paddingLeft="15dp"
                android:text="Yok"
                android:textColor="#000000"
                android:textSize="@dimen/streetinfo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:orientation="horizontal"
            android:padding="2dp"
            android:weightSum="100" >

            <TextView
                android:id="@+id/tv_info_independent_section"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:padding="2dp"
                android:paddingLeft="15dp"
                android:text="Bağımsız Sayısı :"
                android:textColor="#000000"
                android:textSize="@dimen/streetinfo"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_info_independent_section_value"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="75"
                android:padding="2dp"
                android:paddingLeft="15dp"
                android:text="Yok"
                android:textColor="#000000"
                android:textSize="@dimen/streetinfo" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>