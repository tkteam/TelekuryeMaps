<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    android:weightSum="100" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="vertical"
        android:weightSum="3" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:weightSum="3" >

            <TextView
                android:id="@+id/new_tv_info_welcome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="#ffffff"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:textSize="@dimen/phone_form_font" />

            <TextView
                android:id="@+id/new_tvNetworkStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:textSize="@dimen/phone_form_font" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:weightSum="3" >

            <TextView
                android:id="@+id/new_tv_info_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:textSize="@dimen/phone_form_font" />

            <TextView
                android:id="@+id/new_tv_info_battery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:textSize="@dimen/phone_form_font" />

            <TextView
                android:id="@+id/new_tv_info_accuracy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:textSize="@dimen/phone_form_font" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:weightSum="3" >

            <TextView
                android:id="@+id/new_tv_info_version"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:textSize="@dimen/phone_form_font" />

            <TextView
                android:id="@+id/new_tv_Score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:textSize="@dimen/phone_form_font" />

            <TextView
                android:id="@+id/new_tv_info6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:textSize="@dimen/phone_form_font" />
        </LinearLayout>
    </LinearLayout>

    <fragment
        android:id="@+id/new_map"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="45"
        class="com.google.android.gms.maps.MapFragment" />

    <TabHost
        android:id="@+id/new_tabSecim"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="43" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/_btn_mavi_kirmizi"
                android:weightSum="4" >

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@drawable/_btn_mavi_kirmizi"
                    android:gravity="top"
                    android:weightSum="1" >
                </TabWidget>

                <Button
                    android:id="@+id/new_btn_save_feedback"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/_btn_koyu_mavi_kirmizi"
                    android:text="Sonraki"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/tabletfont" />
            </LinearLayout>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:id="@+id/new_tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="80" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="10"
                        android:minHeight="@dimen/phone_form_min_height"
                        android:weightSum="3" >

                        <TextView
                            android:id="@+id/new_tv_mission_status"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@color/tvback2"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="Görev Durumu:"
                            android:textColor="@color/tvtext"
                            android:textSize="@dimen/phone_form_font2" />

                        <TextView
                            android:id="@+id/new_tv_mission_status_value"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="2"
                            android:background="@color/tvback"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dp"
                            android:textColor="@color/tvtext"
                            android:textSize="@dimen/phone_form_font2" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="10"
                        android:minHeight="@dimen/phone_form_min_height"
                        android:weightSum="3" >

                        <TextView
                            android:id="@+id/new_tv_apname"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@color/tvback2"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="Bina Adı :"
                            android:textColor="@color/tvtext"
                            android:textSize="@dimen/phone_form_font2" />

                        <EditText
                            android:id="@+id/new_et_apname_value"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="2"
                            android:background="@color/tvback"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dp"
                            android:singleLine="true"
                            android:textColor="@color/tvtext"
                            android:visibility="gone"
                            android:textSize="@dimen/phone_form_font2" >

                            <requestFocus />
                        </EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="10"
                        android:minHeight="@dimen/phone_form_min_height"
                        android:weightSum="3" >

                        <TextView
                            android:id="@+id/new_tv_StreetOrBuildingType"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@color/tvback2"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="Bina Tipi :"
                            android:textColor="@color/tvtext"
                            android:textSize="@dimen/phone_form_font2" />

                        <Button
                            android:id="@+id/new_btn_StreetOrBuildingType"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="2"
                            android:background="@color/wallet_holo_blue_light"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dp"
                            android:textColor="@color/tvtext"
                            android:textSize="@dimen/phone_form_font2" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="10"
                        android:minHeight="@dimen/phone_form_min_height"
                        android:orientation="horizontal"
                        android:weightSum="3" >

                        <TextView
                            android:id="@+id/new_tv_apno"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@color/tvback2"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="Bina No :"
                            android:textColor="@color/tvtext"
                            android:textSize="@dimen/phone_form_font2" />

                        <EditText
                            android:id="@+id/new_et_apno_value"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="2"
                            android:background="@color/tvback"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:singleLine="true"
                            android:textColor="@color/tvtext"
                            android:visibility="gone"
                            android:textSize="@dimen/phone_form_font2" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/new_tab3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="100" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="50"
                        android:orientation="horizontal" >

                        <CheckBox
                            android:id="@+id/new_cbSolKapi"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="33"
                            android:button="@null"
                            android:checked="true"
                            android:drawableRight="@android:drawable/btn_radio"
                            android:gravity="right|center_vertical"
                            android:text="KAPI SOLDA"
                            android:textColor="#ffffff"
                            android:textSize="25dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="33"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/new_img_vehicle_km_photo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/building" />
                        </LinearLayout>

                        <CheckBox
                            android:id="@+id/new_cbSagKapi"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="33"
                            android:button="@null"
                            android:drawableLeft="@android:drawable/btn_radio"
                            android:paddingLeft="10dp"
                            android:text="KAPI SAĞDA"
                            android:textColor="#ffffff"
                            android:textSize="25dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="50"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:weightSum="100" >

                        <CheckBox
                            android:id="@+id/new_cbOnKapi"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="60"
                            android:button="@null"
                            android:drawableTop="@android:drawable/btn_radio"
                            android:text="KAPI ÖNDE"
                            android:textColor="#ffffff"
                            android:textSize="25dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="40"
                            android:background="#ffffff" >

                            <TextView
                                android:id="@+id/new_tv_street_name1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Sokak Adı"
                                android:textColor="#000000"
                                android:textSize="30sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/new_tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="100" >

                    <LinearLayout
                        android:id="@+id/new_llImages"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="70"
                        android:orientation="horizontal"
                        android:weightSum="100" >
                    </LinearLayout>

                    <Button
                        android:id="@+id/new_btnSavePhoto"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="30"
                        android:background="@drawable/_btn_mavi_kirmizi"
                        android:text="Fotoğraf Çek"
                        android:textSize="40dp" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

</LinearLayout>